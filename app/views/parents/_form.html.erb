<%= form_for @parent, :html => { :class => "form-horizontal parent" } do |f| %>

    <% if @parent.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@parent.errors.count, "error") %> prohibited this parent from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @parent.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@parent[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@parent[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :car_model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :car_model, :class => 'form-control' %>
    </div>
    <%= error_span(@parent[:car_model]) %>
  </div>
  <div class="control-group">
    <%= f.label :license_plate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :license_plate, :class => 'form-control' %>
    </div>
    <%= error_span(@parent[:license_plate]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            parents_path, :class => 'btn btn-default' %>

<% end %>
